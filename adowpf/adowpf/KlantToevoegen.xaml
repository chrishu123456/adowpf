<Window x:Class="adowpf.KlantToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adowpf"
        mc:Ignorable="d"
        Title="KlantToevoegen" Height="300" Width="700">
    <Grid>
        <Label x:Name="LabelNaam" Content="Naam : " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,500,200" Width="100"></Label>
        <TextBox x:Name="TextBoxnaam" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,400,200" Width="100"></TextBox>
        <Button x:Name="ButtonToevoegen" Content="Toevoegen" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,400,100" Width="100" Click="ButtonToevoegen_Click"></Button>
        <Label x:Name="LabelKlantNr" Content="KlantNr : " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,400,0" Width="100"></Label>
        <Label x:Name="LabelMeldingen" Content="No comment." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" Width="550"></Label>
    </Grid>
</Window>
